/* pages/wordbook/wordbook.wxss */
.navigationBar{
  width:100vw;
  height:60px;
  position:fixed;
  z-index:10;
  align-items:center;
  padding-top:20px;
  display:flex;
  /*background-color:#ccf;*/
  background:linear-gradient(to right, #1c80ff, #05AFF2);
  color:#fff;
  box-shadow:2px 0px 5px #888;
}
.nav-title{
  height:32px;
  line-height:32px;
  font-size:16px;
  margin-left:15px;
}
.word_block{
  clear: both;
  float:left;
  display: block;
}
.word-class{
  margin-left:10px;
  font-weight: bolder;
  clear: both;
}
.word-exam-type{
 font-size: 8px;
}
.top-column{
  width:100%;
  /*height:92px;*/
  /*padding-top:20px;*/
  position:fixed;
  bottom:0;
  left:0;
  /*background-color:#1c80ff;*/
  transition:transform 0.1s;
  /*box-shadow: 0px 0px 20px rgba(0,0,0,0.3);*/
  /*background:linear-gradient(to right, #1c80ff, #05AFF2);*/
  background-color:#555;
  outline:1px solid rgba(0,0,0,0.1);
}
/**页面转跳按钮样式-临时*/
.navigation-bar{
  height:44px;
  width:100%;
  display:flex;
  align-items:center;
}
.nav-button{
  height:20px;
  width:20px;
  padding:6px;
  /*background-color:#fff;*/
  border-radius:16px;
  z-index:10px;
  margin:0 calc((100% - 32px * 4) / 8);
}
.operate-bar{
  height:32px;
  padding:2px 0;
  display:flex;
  background-color:#fff;
}

.button{
  width:60px;
  height:30px;
  background-color:#efefef;
  border-radius:15px;
  border:1px solid #aaa;
  font-size:12px;
}